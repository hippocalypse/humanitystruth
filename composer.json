{
    "name": "humanitystruth/humanitystruth",
    "description": "HumanitysTruth Framework",
    "keywords": ["truth", "humanity", "intelligence", "open", "source", "free"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.1.3",
        "abraham/twitteroauth": "^0.9.2",
        "ezyang/htmlpurifier": "dev-master",
        "fideloper/proxy": "~4.0",
        "laravel/framework": "5.6.*",
        "laravel/scout": "^4.0",
        "laravel/tinker": "~1.0",
        "nwidart/laravel-modules": "^3.0",
        "phpseclib/phpseclib": "^2.0.4",
        "predis/predis": "^1.1",
        "spatie/laravel-uptime-monitor": "^3.3"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "nunomaduro/collision": "~2.0",
        "phpunit/phpunit": "~7.0",
        "symfony/thanks": "^1.0"
    },
    "autoload": {
        "classmap": [
            "tests",
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "Modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": ["tests/utilities/functions.php"]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
